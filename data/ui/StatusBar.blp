using Gtk 4.0;

template $StatusBar: Window {
  default-height: 40;

  styles [
    "StatusBar_Master"
  ]

  CenterBox {
    start-widget: Box {
      spacing: 10;

      Button apps_button {
        label: "L";
        name: "apps_button";
        valign: center;
      }

      Box workspaces {
        name: "workspaces";
        spacing: 5;

        styles [
          "workspaces"
        ]
      }
    };

    center-widget: Button mpris_button {
      name: "mpris_button";
      valign: center;

      styles [
        "mpris_button"
      ]

      child: Label mpris_label {
        label: "oooops";
      };
    };

    end-widget: Box right_box {
      spacing: 10;

      styles [
        "right_box"
      ]

      Label volume {
        name: "volume";

        styles [
          "statusbar_label"
        ]
      }

      Label clock {
        name: "clock";

        styles [
          "statusbar_label"
        ]
      }

      Box systray {}

      Button power_button {
        label: "Power";
        name: "power_button";
        valign: center;
      }
    };
  }
}
