using Gtk 4.0;

template $NavBar: Window {
  default-height: 40;

  CenterBox {
    start-widget: Box {
      Button {
        label: "Launch";
        name: "apps_button";
        clicked => $on_button_clicked();
      }

      Box {
        name: "workspaces";
      }
    };

    center-widget: Label {
      label: bind template.currentSong;
    };

    end-widget: Label {
      label: _("Hello, World!");
    };
  }
}
